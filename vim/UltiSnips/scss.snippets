# Sass Specific snippets
snippet +
@include $0;
endsnippet
snippet ++
@import '$0';
endsnippet
snippet +++
@extend $0;
endsnippet

snippet mix
@mixin $1 {
$0
};
endsnippet

snippet &fs
&::first-child {$1};$0
endsnippet

# CSS snippets

# content display

snippet d
display: $0;
endsnippet

# flex options
snippet ac
align-content: ${0:flex-start};
endsnippet
