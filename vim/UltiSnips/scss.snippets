# Mixins - only useful if they each particular plugin is installed
snippet +bp
@include breakpoint(${1:min-width} ${2:$size}) {
	$3
}${0:;}
endsnippet
snippet bp
breakpoint(${1:min-width} ${2:$size}) {
	$0
}
endsnippet
